<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>NodeJS Basic</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
</head>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/upload">Upload file</a>
  </div>

  <div class="w3-container">
    <h2>List User Table</h2>

    <table class="w3-table-all w3-hoverable">
      <thead>
        <tr class="w3-light-grey">
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < dataUser.length; i++) { %>
          <tr>
            <td>
              <%= dataUser[i].id %>
            </td>
            <td>
              <%= dataUser[i].firstName %>
            </td>
            <td>
              <%= dataUser[i].lastName %>
            </td>
            <td style="display:flex;">
              <form class="form-listUser" action="/detail/user/<%= dataUser[i].id %>" target="_blank" method="get">
                <button class="btn-actions" style="background-color: rgb(20, 204, 20) ;" type="submit">Details</button>
              </form>
              <form class="form-listUser" action="/edit-user/<%= dataUser[i].id %>" method="get">
                <button class="btn-actions" style="background-color:rgb(40, 119, 197) ;" type="submit">Edit</button>
              </form>
              <form class="form-listUser" action="/delete-user" method="post">
                <input type="text" value="<%= dataUser[i].id %>" hidden name="userId" />
                <button class="btn-actions" style="background-color: brown;" type=" submit">Delete</button>
              </form>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>

  <div class="create-user-container">
    <form action="create-new-user" method="post">
      <h2><b><i>Create a new user:</i></b></h2>
      <div>
        <label for="">First Name</label>
        <input class="create-user-input" type="text" name="firstName" />
      </div>
      <div>
        <label for="">Last Name</label>
        <input class="create-user-input" type="text" name="lastName" />
      </div>
      <div>
        <label for="">Email</label>
        <input class="create-user-input" type="email" name="email" />
      </div>
      <div>
        <label for="">Address</label>
        <input class="create-user-input" type="text" name="address" />
      </div>
      <div>
        <button type="submit" class="btn-submit">Submit</button>
      </div>
    </form>
  </div>
</body>

</html>